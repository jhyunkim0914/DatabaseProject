    <style>
      table#title
      {
      	border: 1px solid black;
      	width: 60%;
      	height: 50px;
      	margin: auto;
      	text-align: center;
      	font-weight: bold;
      	font-size: 20px;
      }
      table#worktime
      {
      	border: 1px solid black;
      	width: 80%;
      	height: 80px;
      	margin: auto;
      	text-align: center;
      }
      table#sign
      {
      	border: 1px solid black;
      	width: 80%;
      	height: 80px;
      	margin: auto;
      	text-align: center;
      }
      table#sign tr td.type
      {
      	width: 45px;
      }
      p.etc
      {
      	line-height:30%;
      }
