    <script>

      $(document).ready(function(){
        $.ajax({
            url: "/contracts/recruitformat=<%= contractid %>",
            data: {
            },
            success: function( result ) {
              console.log(result);
              $("td.ownername:eq(1)").text(result.name);
              $("td.phone:eq(1)").text(result.phone);
              $("td.date:eq(1)").text(result.enddate);
              $("td.address:eq(1)").text(result.address);
              $("td.content:eq(1)").text(result.content);
              $("td.workingtime:eq(1)").text(result.workingtime);
              $("td.wage:eq(1)").text(result.wage);
              $("td.bonus:eq(1)").text(result.bonus);
              $("td.otherpay:eq(1)").text(result.otherpay);
              $("td.bonusrate:eq(1)").text(result.bonusrate);
              $("td.socialinsurance:eq(1)").text(result.socialinsurance);
            }
          });

          $('button#submitRecruit').click(function(){
            $.ajax({
              url: "/candidates",
              method: "POST",
              data: {
                contractid: "<%= contractid %>",
                workerid: "<%=user.userid%>"
              },
              success: function( result ) {
                console.log(result);
                alert("지원완료!");
                location.href = "/workerindex";
              },
              error: function( error ) {
                console.log(error)
              }
            });
          });
        });





    </script>

